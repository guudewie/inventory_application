<div class="container mx-auto p-4">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        <% for(let i in indices) { %>
            <a href="/index/<%= indices[i].name %>" class="block">
                <div class="flex flex-col bg-white rounded-lg shadow-md p-6 transition duration-300 ease-in-out transform hover:scale-105 h-full">
                    <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= indices[i].name %></h2>
                    <p class="text-gray-600 mb-4 flex-grow"><%= indices[i].description %></p>
                    <div class="justify-self-end block bg-blue-500 text-white font-bold py-2 px-4 rounded-full">
                        <%= indices[i].ticker_symbol %>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
</div>
