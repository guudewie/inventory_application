<div class="flex flex-col gap-10">
    <div class="flex w-full justify-between flex-wrap gap-3">
        <div class="flex flex-col gap-2">
            <div class="flex gap-2 items-center">
                <div class="text-2xl font-bold"><%=security.security_name%></div>
                <div class="bg-gray-800 text-white py-2 px-4 rounded-full text-xs"><%=security.security_ticker%></div>
            </div>
            <div class="font-thin"><%=security.security_description%></div>
        </div>
        <div class="flex justify-center gap-2">
            <a href="/<%= type %>/<%=security.security_id%>/edit">
                <button type="button" class="w-36 text-black bg-transparent border-2 hover:bg-blue-600 hover:border-blue-700 hover:text-white focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">
                    <svg aria-hidden="true" class="inline-block mr-1 -ml-1 w-5 h-5" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z" />
                        <path fill-rule="evenodd" d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" clip-rule="evenodd" />
                    </svg>
                    Edit
                </button>
            </a>
            <a href="/<%= type %>/<%=security.security_id%>/delete">
                <button type="button" class="w-36 text-black bg-transparent border-2 hover:bg-red-600 hover:border-red-700 hover:text-white focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">
                    <svg aria-hidden="true" class="inline-block mr-1 -ml-1 w-5 h-5" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" clip-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" />
                    </svg>
                    Delete
                </button>
            </a>
        </div>
    </div>
    <div>
        <div class="mb-2">Indices with this security: </div>
        <% if (security.indices[0].id == null) { %>
            <div class="bg-red-500 rounded-lg py-2 px-4 text-white">
                No securities added to this index yet!
            </div>
        <% } else {%>
            <% console.log(security) %>
            <%- include("listAllDetail", {result : security.indices, type : "index"}) %>
        <% } %>
    </div>
    <div>
        <div class="font-thin text-xs">Created on <%= security.created %></div>
        <div class="font-thin text-xs">Last updated on <%= security.updated %></div>
    </div>
</div>